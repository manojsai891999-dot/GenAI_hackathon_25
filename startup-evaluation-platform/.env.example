# Startup Evaluation Platform - Environment Configuration

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_LOCATION=us-central1

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
API_VERSION=v1

# Database Configuration
FIRESTORE_DATABASE=(default)

# Email Configuration (for scheduling agent)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@company.com
EMAIL_PASSWORD=your-app-password

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Calendar Integration
GOOGLE_CALENDAR_CREDENTIALS=path/to/calendar-credentials.json

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Vertex AI Configuration
VERTEX_AI_MODEL=gemini-1.5-pro
VERTEX_AI_TEMPERATURE=0.3
VERTEX_AI_MAX_TOKENS=8192

# Storage Configuration
STORAGE_BUCKET=startup-evaluation-storage
RECORDINGS_BUCKET=interview-recordings

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
